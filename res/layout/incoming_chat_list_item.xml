<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    
    <TextView 
        android:id="@+id/messageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/dateView"
        android:layout_toRightOf="@+id/contactIconView"
        android:background="@drawable/incoming_message_bg"
        android:textColor="#303030" />
    
    <TextView 
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@id/messageView"
        android:layout_alignParentTop="true"
        android:textSize="12sp"
        android:textColor="#878b8e" />
    
    <ImageView
        android:id="@+id/contactIconView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/messageView"
        android:layout_marginRight="5dp"
        android:src="@drawable/contact_icon_default" />

</RelativeLayout>
